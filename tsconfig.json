{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "inlineSources": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "lib": [ "es6", "dom", "esnext.asynciterable"],
    "baseUrl": "src",
    "paths": {
      "*": ["./*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
